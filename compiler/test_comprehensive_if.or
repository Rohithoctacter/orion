// Comprehensive test of all if/elif/else features

// Test 1: All comparison operators
a = 10
b = 20

out("=== Testing All Comparison Operators ===")
out("a =", a, "b =", b)

if a == 10 {
    out("✓ a equals 10")
}

if a != b {
    out("✓ a not equal to b")
}

if a < b {
    out("✓ a less than b")
}

if b > a {
    out("✓ b greater than a")
}

if a <= 10 {
    out("✓ a less than or equal to 10")
}

if b >= 20 {
    out("✓ b greater than or equal to 20")
}

// Test 2: Nested if statements with multiple levels
age = 25
out("=== Testing Nested If Statements ===")
out("Age:", age)

if age >= 16 {
    out("✓ Old enough to drive")
    
    if age >= 21 {
        out("✓ Can drink legally too")
        
        if age >= 25 {
            out("✓ Can rent a car without extra fees")
        }
    } else {
        out("✓ Cannot drink yet")
    }
} else {
    out("Too young to drive")
}

// Test 3: Complex elif chain
score = 75
out("=== Testing Elif Chain ===")
out("Score:", score)

if score >= 90 {
    out("Grade: A")
} elif score >= 80 {
    out("Grade: B")
} elif score >= 70 {
    out("Grade: C")
} elif score >= 60 {
    out("Grade: D")
} else {
    out("Grade: F")
}

// Test 4: Variable equality comparisons
x = 15
y = 15
z = 10

out("=== Testing Variable Equality ===")
out("x =", x, "y =", y, "z =", z)

if x == y {
    out("✓ x equals y")
    
    if x != z {
        out("✓ x is not equal to z")
    }
}

if x >= y {
    out("✓ x greater than or equal to y")
}

if x <= y {
    out("✓ x less than or equal to y")
}

out("=== All Tests Complete ===")