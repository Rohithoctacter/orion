modules = ["cpp-clang14", "c-clang14", "nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql", "gcc", "gnumake", "file", "binutils"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Orion Web IDE"

[[workflows.workflow]]
name = "Orion Web IDE"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42303
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["uv", "run", "gunicorn", "--bind", "0.0.0.0:5000", "--reuse-port", "main:app"]
